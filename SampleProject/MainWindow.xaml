<Window x:Class="DXGrid_AttributesBasedValidation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <dxg:GridControl Name="grid" ItemsSource="{Binding Items}" SelectionMode="Row" SelectedItems="{Binding SelectedItems}" CurrentItem="{Binding FocusedItem, Mode=TwoWay}" 
                     SelectedItemChanged="Grid_OnSelectedItemChanged">
      <dxg:GridControl.Columns>
        <!--<dxg:GridColumn Header="" FieldName="FixSelect"/>-->
        <dxg:GridColumn FieldName="FirstName" />
        <dxg:GridColumn FieldName="LastName" />
      </dxg:GridControl.Columns>

      <dxg:GridControl.View>
        <dxg:TableView Name="tableView1" AutoWidth="True" ShowValidationAttributeErrors="False" AllowCommitOnValidationAttributeError="False"
                       ShowCheckBoxSelectorColumn="True" ShowIndicator="False" EnableImmediatePosting="True" RetainSelectionOnClickOutsideCheckBoxSelector="True">
          <dxmvvm:Interaction.Behaviors>
            <dxmvvm:ReadOnlyDependencyPropertyBindingBehavior Property="IsEditing" Binding="{Binding IsEditing, Mode=OneWayToSource}"/>
          </dxmvvm:Interaction.Behaviors>
        </dxg:TableView>


      </dxg:GridControl.View>
    </dxg:GridControl>

    <TextBlock Grid.Row="1" Text="{Binding SelectedItems.Count, StringFormat='Selected object count: {0}'}"></TextBlock>
    <Button Grid.Row="2" Command="{Binding CmdSelect}">Set Selection</Button>
    <Button Grid.Row="3" Click="ButtonBase_OnClick">Toggle selector column</Button>
  </Grid>
</Window>
